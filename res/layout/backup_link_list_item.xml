<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/link_item"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/links_layer_list_unpressed"
    android:descendantFocusability="blocksDescendants" >
           
 	<ImageButton
 	    android:id="@+id/phone"
 	    android:layout_width="48dp"
 	    android:layout_height="48dp"
 	    android:layout_alignParentRight="true"
 	    android:layout_centerVertical="true"
 	    android:layout_margin="8dp"
 	    android:background="@drawable/imagebutton_states"
 	    android:src="@drawable/ic_action_call" />
 	
 	
 	<ImageView
 	    android:id="@+id/category_icon"
 	    android:layout_width="48dp"
 	    android:layout_height="48dp"
 	    android:layout_alignParentRight="true"
 	    android:layout_centerVertical="true"
 	    android:layout_margin="8dp" />

	<View
	    android:id="@+id/box1"
	    android:layout_width="8dp"
	    android:layout_height="64dp"
	    android:layout_alignParentLeft="true"
	    android:background="@color/red_mah" />

    <TextView
        android:id="@+id/link_title"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/phone"
        android:layout_toRightOf="@+id/box1"
        android:textColor="@color/links_text_states"
        android:textSize="16sp"
        android:paddingLeft="8dp" />
    
    <TextView
        android:id="@+id/category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/box1"
        android:textStyle="bold"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:textColor="@color/black"
        android:textSize="16sp" />
    
        <TextView
        android:id="@+id/category_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/box1"
        android:layout_below="@+id/category_title"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:textColor="@color/grey_dark" />

</RelativeLayout>

